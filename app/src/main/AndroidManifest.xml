<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_cart_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_cart_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ListaDeCompras"
        tools:targetApi="31">

        <activity
            android:name=".feature.shopping_items.ShoppingItemActivity"
            android:exported="false" />
        <activity
            android:name=".feature.shopping_items.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.ListaDeCompras" />
        <activity
            android:name=".feature.shopping_lists.ShoppingListActivity"
            android:exported="false" />
        <activity
            android:name=".feature.register.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".feature.manage_list.ManageListActivity"
            android:exported="false" />
        <activity
            android:name=".feature.manage_item.ManageItemActivity"
            android:exported="false" />
        <activity
            android:name=".feature.login.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
